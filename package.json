  "description": "Node.js backend for ecommerce application",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "NODE_OPTIONS=--dns-result-order=ipv4first node server.js",
    "dev": "nodemon server.js",
    "start:prod": "NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "format": "prettier --write ."
  },
  "author": "Shuvam Shiwakoti",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
